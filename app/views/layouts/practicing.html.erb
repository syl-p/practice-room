<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for?(:title) ? yield(:title) : 'Bienvenue' %> - Practice Room</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="description" content="<%= content_for(:description) ? yield(:description) : '' %>">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%= stylesheet_link_tag 'main', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_include_tag "application", "data-turbo-track": "reload", defer: true %>
  </head>

  <body>
    <main
      class="off-canvas off-canvas-sidebar-show"
      data-controller="application"
      data-application-root-value="<%= root_url %>">
<%#
      <a class="off-canvas-toggle btn btn-primary btn-action" href="#sidebar-id"
        data-action="application#togglePracticerSidebar">
        <i class="icon icon-menu"></i>
      </a> %>

      <aside
        id="sidebar-id" class="off-canvas-sidebar practice-sidebar"
        data-controller="practicer-sidebar tabs"
        data-practicer-sidebar-target="container">
        <%= render "shared/practicer/practice_sidebar" %>
      </aside>
      <a class="off-canvas-overlay" href="#close"
        data-action="application#togglePracticerSidebar"></a>


      <div class="off-canvas-content">
        <% if notice.present? %>
          <div class="toast toast-primary">
            <p class="notice"><%= notice %></p>
          </div>
        <% end %>
        <% if alert.present? %>
          <div class="toast toast-warning">
            <p class="alert"><%= alert %></p>
          </div>
        <% end %>
        <%= yield %>
        <%= render partial: 'shared/footer' %>
      </div>
    </main>
  </body>
</html>
