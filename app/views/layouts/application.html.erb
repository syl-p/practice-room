<!DOCTYPE html>
<html class="h-full">
  <head>
    <title><%= content_for?(:title) ? yield(:title) : 'Bienvenue' %> - Practice Room</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="description" content="<%= content_for(:description) ? yield(:description) : '' %>">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%= stylesheet_link_tag "tailwind", "inter-font", "data-turbo-track": "reload" %>
    <%= javascript_include_tag "application", "data-turbo-track": "reload", defer: true %>
  </head>

  <body class="h-full bg-light" data-controller="hello">
    <div class="flex relative space-x-8"
      aria-labelledby="slide-over-title"
      data-controller="application"
      data-application-root-value="<%= root_url %>">
      <!-- Narrow -->
      <%= render "shared/narrow_sidebar" %>
      <!-- END Narrow -->

      <!-- Content area -->
      <main class="relative flex-1">

        <div class="flex z-0 space-x-8">
          <div class="flex-1">
            <%= render "shared/header" %>
            <%= yield %>
          </div>

          <div class="hidden relative w-3/12 h-screen lg:block">
            <%= render "shared/practice_sidebar" if current_user.present? %>
          </div>
        </div>
      </main>
      <!-- END Content area -->
    </div>
  </body>
</html>
