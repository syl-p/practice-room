<ul role="list" class="gap-x-4 gap-y-4 grid xl:grid-cols-2 lg:grid-flow-row-dense" data-exercises-target="results">
  <% exercises.each do |exercise| %>
    <li class="bg-white rounded-lg shadow-lg transition hover:shadow-xl p-6 flex-1">
      <%= render partial: "exercises/card", locals: {exercise: exercise} %>
    </li>
  <% end %>
</ul>
