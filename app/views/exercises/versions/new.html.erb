
<%= turbo_frame_tag "exercise_versions" do %>
    <div class="panel">
        <div class="panel-header">
            <a href="<%= list_versions_path(@exercise.original) %>" class="float-right">
                <i class="icon icon-cross"></i>
            </a>
            <h3>Nouvelle version:</h3>
            <p>Proposer une version personnalisée de l'exercice: <%= @exercise.original.title %></p>
        </div>
        <div class="panel-body">
            <%= render 'exercises/versions/form', version: @exercise %>
        </div>

        <div class="panel-footer">
            <%=  link_to 'Retour à la liste des versions', list_versions_path(@exercise.original) %>
        </div>
    </div>
<% end %>