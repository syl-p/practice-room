<%= turbo_frame_tag "exercise_versions" do %>
  <div class="flex flex-col w-full h-full">
    <div class="px-6 py-6">
      <div class="flex space-x-6">
        <div class="flex-1">
          <h3 class="mb-1 text-xl">Versions Alternatives</h3>
          <p class="text-xs font-light text-gray-500">Découvrez ici des versions améliorées, modifiées de ce même exercice !"</p>
        </div>
        <div class="self-center">
          <%= link_to new_exercise_version_path(exercise_id: @exercise.id), data: {turbo_frame: "exercise_versions"}, class: 'block rounded-full border p-1' do %>
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
              <path stroke-linecap="round" stroke-linejoin="round" d="M12 4.5v15m7.5-7.5h-15" />
            </svg>
          <% end %>
        </div>
      </div>
    </div>
    <div class="overflow-hidden overflow-y-auto">
      <%= render partial: "exercises/versions/list", locals: {versions: @versions, exercise: @exercise} %>
    </div>
  </div>
<% end %>
