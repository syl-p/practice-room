<%
  content_for(:title, @exercise.title)
  content_for(:description, @exercise.description)
%>
<% content = capture do %>
  <section class="w-full">
    <header class="mb-6 pt-10 px-8">
      <div class="flex space-x-4 mb-3">
        <figure class="flex-shrink-0 self-center">
          <a href="<%= user_url(@exercise.user) %>" data-turbo="false">
            <%= render partial: "users/avatar", locals: {user: @exercise.user, size: :medium} %>
          </a>
        </figure>
        <div class="flex-1 min-w-0">
          <h1 class="text-4xl font-bold">
            <%= link_to @exercise.title, @exercice, data: {turbo: false} %>
          </h1>
          <p class="text-xs font-light text-gray-500">Publié par
            <a href="<%= user_url(@exercise.user) %>" data-turbo="false">
              <%= @exercise.user.username %>
            </a>
            le <%= l @exercise.created_at, format: :short %>
          </p>
        </div>
      </div>

      <% if @exercise.goal_end.present? %>
        <%= turbo_frame_tag "goal_setting_form" do %>
          <%= render partial: "exercises/goal_settings/form", locals: {exercise: @exercise, goal_setting: @goal_setting} %>
        <% end %>
      <% end %>

      <!-- INFORMATION + PRACTICE -->
      <div class="flex space-x-4 my-6">

        <% if current_user.present? %>
          <div class="pr-4 border-r border-gray-400 ">
            <%= render partial: "practices/adding_time", locals: {exercise: @exercise} if current_user.present? %>
          </div>
        <% end %>
        <div class="flex space-x-4">
          <div class="flex-shrink-0 self-center">
            <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M15 5v2m0 4v2m0 4v2M5 5a2 2 0 00-2 2v3a2 2 0 110 4v3a2 2 0 002 2h14a2 2 0 002-2v-3a2 2 0 110-4V7a2 2 0 00-2-2H5z" />
            </svg>
          </div>
          <p class="mb-0">
            <span class="font-bold"><%= @exercise.level %></span><br>
            Niveau
          </p>
        </div>

        <div class="flex space-x-4">
          <div class="flex-shrink-0 self-center">
            <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01" />
            </svg>
          </div>
          <p class="mb-0">
            <span class="font-bold"><%= @exercise.versions.count %></span><br>
            Versions
          </p>
        </div>

        <div class="flex space-x-4">
          <div class="flex-shrink-0 self-center">
            <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M17 8h2a2 2 0 012 2v6a2 2 0 01-2 2h-2v4l-4-4H9a1.994 1.994 0 01-1.414-.586m0 0L11 14h4a2 2 0 002-2V6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2v4l.586-.586z" />
            </svg>
          </div>
          <p class="mb-0">
            <span class="font-bold"><%= @exercise.comments.count %></span><br>
            Commentaires
          </p>
        </div>
      </div>
      <!-- END INFORMATION + PRACTICE -->


      <% if @exercise.goal_end.present? %>
        <%= turbo_frame_tag "goal_setting_form" do %>
          <%#= render partial: "exercises/goal_settings/form", locals: {exercise: @exercise, goal_setting: @goal_setting} %>
        <% end %>
      <% end %>
      <%#= render partial: "practices/toolbar", locals: {exercise: @exercise, extended: true} if current_user.present? %>
    </header>

    <section>
      <!-- VIDEO -->
      <div class="mb-10">
        <youtube-player data-application-target="videoPlayer" video-id="<%= @exercise.video_link %>">
          <div class="bg-white flex items-center justify-center h-[450px]" slot="empty">
            <div class="text-center">
              <svg xmlns="http://www.w3.org/2000/svg" class="w-12 h-12" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M7 4v16M17 4v16M3 8h4m10 0h4M3 12h18M3 16h4m10 0h4M4 20h16a1 1 0 001-1V5a1 1 0 00-1-1H4a1 1 0 00-1 1v14a1 1 0 001 1z" />
              </svg>
              <p class="my-6 text-sm font-light text-center">Aucune vidéo disponible</p>
            </div>
          </div>
        </youtube-player>
      </div>
      <!-- VIDEO -->


      <!-- CONTENT -->
      <tabs-section>
        <div class="px-8" class="prose" slot="tab" data-tab-title="Contenu">
          <%= sanitize renderHtml @exercise.body %>
        </div>

        <% if @exercise.versions_enabled %>
          <div class="px-8" slot="tab" data-tab-title="Versions alternatives">
            <!-- Turbo load version list + Skeleton -->
            <%= turbo_frame_tag "exercise_versions", src: versions_list_exercises_path(@exercise), loading: :lazy do %>
              <%= render partial: "exercises/versions/list_skeleton" %>
            <% end %>
          </div>
        <% end %>

        <% if @exercise.media.count > 0 %>
          <div class="px-8" slot="tab" data-tab-title="Ressources">
            <p class="mb-6 font-light text-gray-600">Ressources partagées par l'auteur de l'exercice:</p>
            <%= render partial: "shared/ressource_list", locals: {media: @exercise.media} %>
          </div>
        <% end %>

        <div class="px-8" slot="tab" data-tab-title="Discussions">
          <% if user_signed_in? %>
            <%= turbo_frame_tag "comment_new" do %>
              <%= render partial: "comments/form",
                locals: {
                  comment: Comment.new, commentable: @exercise, first: true
                } %>
            <% end %>
          <% else %>
            <!-- empty state: not signed in -->
            <div class="flex flex-col justify-center items-center p-24 mb-10 bg-gray-200 rounded-md">
              <div class="text-center">
                <svg xmlns="http://www.w3.org/2000/svg" class="w-12 h-12" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
                </svg>
                <p class="my-6 text-sm font-light text-center">Vous devez être connecter pour pouvoir commenter.</p>
                <div class="flex">
                  <%= link_to "Se connecter", new_user_session_path, class: "btn btn-primary"  %>
                  <%= link_to "S'inscrire", new_user_registration_path, class: "btn btn-secondary"  %>
                </div>
              </div>
            </div>
          <% end %>

          <!-- Turbo load comments list + Skeleton -->
          <%= turbo_frame_tag "exercise_comments", src: exercise_comments_path(@exercise), loading: :lazy do %>
            <%= render partial: "exercises/versions/list_skeleton" %>
          <% end %>
        </div>
      <tabs-section>
      <!-- END CONTENT -->
    </section>

    <footer class="px-10 pt-10 mt-10">
    </footer>
  </section>
<% end %>

<% if request.headers['Turbo-Visit'] %>
  <%= content %>
<% else %>
  <%= render "exercises/showcase" do %>
    <% content %>
  <% end %>
<% end %>
