<%
  content_for(:title, @exercise.title)
  content_for(:description, @exercise.description)
%>
<section>
  <header class="relative z-0">
    <div class="absolute top-0 left-0 w-full -z-[100] banner-height rounded-3xl bg-[radial-gradient(ellipse_at_top_left,_var(--tw-gradient-stops))] from-primary-darker to-primary"></div>
    <div class="grid-cols-3 lg:grid p-12 gap-8">
      <div class="relative col-span-2 h-full">
        <youtube-player data-application-target="videoPlayer" video-id="<%= @exercise.video_link %>">
        </youtube-player>
        <div class="flex mt-6 mb-3 space-x-4">
          <figure class="flex-shrink-0 self-center">
            <a href="<%= user_url(@exercise.user) %>" data-turbo="false">
              <%= render partial: "users/avatar", locals: {user: @exercise.user, size: 10} %>
            </a>
          </figure>
          <div class="flex-1 min-w-0">
            <p class="text-xs font-light text-gray-500">
              le <%= l @exercise.created_at, format: :short %>
            </p>
            <h1 class="text-2xl font-bold">
              <%= link_to @exercise.title, @exercice, data: {turbo: false} %>
            </h1>
            <div class="flex mt-1 space-x-6 text-sm">
              <a href="<%= user_url(@exercise.user) %>" data-turbo="false" class="py-1 font-medium">
                <%= @exercise.user.username %>
              </a>
              <p class="py-1 pl-6 text-gray-500 border-l"><%= @exercise.user.followers.count %> abonnés</p>
            </div>
          </div>
          <div class="self-center">
            <% if current_user.present? %>
              <%= render partial: "users/follows/bell", locals: {user: @exercise.user} %>
            <% end %>
          </div>
        </div>
      </div>
      <aside class="hidden flex-col space-y-6 h-full lg:flex">
        <div class="banner-height overflow-hidden">
          <!-- INFORMATION + PRACTICE -->
          <div class="flex flex-col space-y-6 justify-between text-white">
            <div class="flex space-x-4">
              <div class="flex-shrink-0 self-center">
                <svg xmlns="http://www.w3.org/2000/svg" class="w-10 h-10" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M15 5v2m0 4v2m0 4v2M5 5a2 2 0 00-2 2v3a2 2 0 110 4v3a2 2 0 002 2h14a2 2 0 002-2v-3a2 2 0 110-4V7a2 2 0 00-2-2H5z" />
                </svg>
              </div>
              <p class="mb-0">
                <span class="font-bold"><%= @exercise.level %></span><br>
                Niveau
              </p>
            </div>

            <div class="flex space-x-4">
              <div class="flex-shrink-0 self-center">
                <svg xmlns="http://www.w3.org/2000/svg" class="w-10 h-10" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M15 5v2m0 4v2m0 4v2M5 5a2 2 0 00-2 2v3a2 2 0 110 4v3a2 2 0 002 2h14a2 2 0 002-2v-3a2 2 0 110-4V7a2 2 0 00-2-2H5z" />
                </svg>
              </div>
              <p class="mb-0">
                <span class="font-bold"><%= Time.at(@exercise.duration).utc.strftime("%H:%M") %></span><br>
                Temps de pratique conseillé
              </p>
            </div>

            <div class="flex space-x-4">
              <div class="flex-shrink-0 self-center">
                <svg xmlns="http://www.w3.org/2000/svg" class="w-10 h-10" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01" />
                </svg>
              </div>
              <p class="mb-0">
                <span class="font-bold"><%= @exercise.versions.count %></span><br>
                Versions
              </p>
            </div>

            <div class="flex space-x-4">
              <div class="flex-shrink-0 self-center">
                <svg xmlns="http://www.w3.org/2000/svg" class="w-10 h-10" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M17 8h2a2 2 0 012 2v6a2 2 0 01-2 2h-2v4l-4-4H9a1.994 1.994 0 01-1.414-.586m0 0L11 14h4a2 2 0 002-2V6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2v4l.586-.586z" />
                </svg>
              </div>
              <p class="mb-0">
                <span class="font-bold"><%= @exercise.comments.count %></span><br>
                Commentaires
              </p>
            </div>
          </div>
          <!-- END INFORMATION + PRACTICE -->
        </div>
        <div class="flex flex-wrap items-center justify-between gap-x-6 gap-y-4 sm:flex-nowrap">
          <!-- Actions -->
          <div>
            <p class="text-sm font-semibold leading-6 text-gray-900">
              <a href="#" class="hover:underline">Des idées pour faire évoluer cet exercice ?</a>
            </p>
            <div class="mt-1 flex items-center gap-x-2 text-xs leading-5 text-gray-500">
              <p>
                <a href="#" class="hover:underline">Versions alternatives</a>
              </p>
              <svg viewBox="0 0 2 2" class="h-0.5 w-0.5 fill-current">
                <circle cx="1" cy="1" r="1" />
              </svg>
              <p><a href="#" class="hover:underline">Commenter</a></p>
            </div>
          </div>
          <%= render partial: "exercises/comments/commenters", locals: {exercise:  @exercise} %>
          <!-- END Actions -->
        </div>
      </aside>
    </div>
  </header>
  <section class="px-12 my-3 lg:grid lg:grid-cols-4 lg:gap-8">
    <aside class="bg-white rounded-3xl border">
      <% if current_user.present? %>
        <div class="p-6">
          <%= render partial: "practices/adding_time", locals: {exercise: @exercise} %>
          <p class="my-6 text-sm font-light text-gray-600">Mettre à jour vos objectifs</p>
          <% if @exercise.goal_end.present? %>
            <%= turbo_frame_tag "goal_setting_form" do %>
              <%= render partial: "exercises/goal_settings/form", locals: {exercise: @exercise, goal_setting: @goal_setting} %>
            <% end %>
          <% end %>
        </div>
      <% end %>

      <% if @exercise.media.count > 0 %>
        <div class="mt-6">
          <p class="m-6 text-sm font-light text-gray-600">Ressources partagées par l'auteur de l'exercice:</p>
          <%= render partial: "shared/ressource_list", locals: {media: @exercise.media} %>
        <div>
      <% end %>
    </aside>
    <section class="lg:col-span-3">
      <%= sanitize renderHtml @exercise.body %>
    </section>
  </section>
  <div class="relative my-8">
    <div class="flex absolute inset-0 items-center" aria-hidden="true">
      <div class="w-full border-t border-gray-300"></div>
    </div>
    <div class="flex relative justify-center">
      <span class="px-2 text-sm text-gray-500 bg-white">Discutons en !</span>
    </div>
  </div>
  <footer>
    <% if user_signed_in? %>
      <%= turbo_frame_tag "comment_new" do %>
        <%= render partial: "comments/form",
          locals: {
            comment: Comment.new, commentable: @exercise, first: true
          } %>
      <% end %>
    <% end %>

    <!-- Turbo load comments list + Skeleton -->
    <%= turbo_frame_tag "#{dom_id(@exercise)}_comments", src: exercise_comments_path(@exercise), loading: :lazy do %>
      <%= render partial: "exercises/versions/list_skeleton" %>
    <% end %>
  </footer>
</section>
