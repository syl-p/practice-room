<%
  content_for(:title, @exercise.title)
  content_for(:description, @exercise.description)
%>

<section class="">
  <header class="w-full bg-gradient-to-r from-indigo-400 to-indigo-500 text-white px-10 pt-10 pb-10">
    <%= render partial: "shared/breadcrump", locals: {links: [
        {
          label: "Exercices",
          path: exercise_path
        },
        {
          label: @exercise.title,
          path: exercise_path(@exercise)
        }
      ]}  %>
    <div class="lg:flex">
      <div class="lg:w-3/6">
        <ul class="exercise-show__header__categories mt-6">
          <% @exercise.categories.each do |category| %>
            <li>
              <a href="<%= by_slug_categories_path category.slug %>"
                  title="<%= category.description %>" class="font-bold">
                #<%= category.name %>
              </a>
            </li>
          <% end %>
        </ul>

        <h1 class="text-4xl font-lite mb-6">
          <%= @exercise.title %>
        </h1>

        <p class="mb-10"><%= @exercise.description %></p>

      </div>
      <div class="lg:w-3/6 lg:self-end ">
        <!-- METAS -->
        <div class="flex mt-6 mb-10 lg:justify-end">

          <div class="flex pr-6">
            <div class="mr-4 flex-shrink-0 self-center">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M15 5v2m0 4v2m0 4v2M5 5a2 2 0 00-2 2v3a2 2 0 110 4v3a2 2 0 002 2h14a2 2 0 002-2v-3a2 2 0 110-4V7a2 2 0 00-2-2H5z" />
              </svg>
            </div>
            <p class="mb-0">
              <span class="text-xl font-bold"><%= @exercise.level %></span><br>
              Niveau
            </p>
          </div>

          <div class="flex pr-6">
            <div class="mr-4 flex-shrink-0 self-center">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01" />
              </svg>
            </div>
            <p class="mb-0">
              <span class="text-xl font-bold"><%= @exercise.versions.count %></span><br>
              Versions
            </p>
          </div>

          <div class="flex">
            <div class="mr-4 flex-shrink-0 self-center">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M17 8h2a2 2 0 012 2v6a2 2 0 01-2 2h-2v4l-4-4H9a1.994 1.994 0 01-1.414-.586m0 0L11 14h4a2 2 0 002-2V6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2v4l.586-.586z" />
              </svg>
            </div>
            <p class="mb-0">
              <span class="text-xl font-bold"><%= @exercise.comments.count %></span>
              <br>
              Commentaires
            </p>
          </div>
        </div>
        <!-- METAS -->
      </div>
    </div>

    <!-- author info -->
    <div class="flex">
      <div class="mr-4 flex-shrink-0 self-center">
        <a href="<%= user_url(@exercise.user) %>" data-turbo="false">
          <%= render partial: "users/avatar", locals: {user: @exercise.user, size: :large} %>
        </a>
      </div>
      <div>
        <h4 class="text-lg font-bold"><%= @exercise.user.username %></h4>
        <p class="mt-1 text-sm font-light">Publié le <%= l @exercise.created_at, format: :short %></p>
      </div>
    </div>
    <!-- author info -->
  </header>

  <article class="lg:flex px-10">
    <aside class="lg:w-4/12 pt-8 pr-6">
      <tabs-section>
      <% if @exercise.versions_enabled %>
        <div slot="tab" data-tab-title="Versions alternatives">
          <!-- VERSIONS LIST -->
            <%= turbo_frame_tag "exercise_versions" do %>
              <%= render partial: "exercises/versions/list", locals: {versions: @exercise.versions_filtered(current_user), exercise: @exercise } %>
            <% end %>
          <!-- VERSIONS LIST -->
        </div>
      <% end %>

        <div slot="tab" data-tab-title="Ressources">
          <h3>Fichier partagés:</h3>
          <%= render partial: "shared/ressource_list", locals: {media: @exercise.media} %>
        </div>
      <tabs-section>
    </aside>

    <section class="lg:w-8/12 lg:-mt-20">
      <!-- VIDEO -->
      <header class="mb-6">
        <youtube-player data-application-target="videoPlayer" video-id="<%= @exercise.video_link %>"></youtube-player>
      </header>
      <!-- VIDEO -->
      <% if current_user.present? %>
        <div class="mb-6">
          <%= render partial: "shared/practicer/practice_toolbar", locals: {exercise: @exercise } %>
        </div>
      <% end %>
      <%= sanitize renderHtml @exercise.body %>
    </section>

  </article>

  <footer class="px-10 pt-10 mt-10">
    <div class="relative">
      <div class="absolute inset-0 flex items-center" aria-hidden="true">
        <div class="w-full border-t border-gray-300"></div>
      </div>

      <div class="relative flex justify-center">
        <span class="px-2 bg-white text-sm text-gray-500"> Commentaires </span>
      </div>
    </div>

    <h2 class="text-center text-3xl my-6">
      <i class="mdi mdi-forum-outline"></i>
      Partage ton expérience !
    </h2>

    <div class="md:w-4/6 md:mx-auto">
      <% if user_signed_in? %>
        <%= turbo_frame_tag "comment_new" do %>
          <%= render partial: "comments/form",
            locals: {
              comment: Comment.new, commentable: @exercise, first: true
            } %>
        <% end %>
      <% else %>
        <div class="empty">
          <div class="empty-icon">
              <i class="mdi mdi-account"></i>
          </div>
          <p class="empty-title h5">Vous devez être connecter pour pouvoir commenter.</p>
          <p class="empty-subtitle">Si tu n'as pas de compte tu peux aussi t'inscrire gratuitement pour participer à la conversation.</p>
          <div class="empty-action">
            <%= link_to "Se connecter", new_user_session_path, class: "btn btn-primary"  %>
            <%= link_to "S'inscrire", new_user_registration_path, class: "btn btn-link"  %>
          </div>
        </div>
      <% end %>

      <!-- COMMENT LIST -->
      <%= tag.div id: "#{dom_id(@exercise)}_comments" do %>
        <%=  render partial: "comments/comment", collection: @exercise.comments.where(parent_id: nil), as: :comment  %>
      <% end %>
      <!-- END COMMENT LIST -->
    </div>
  </footer>
</section>
