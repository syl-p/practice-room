    <li class="tile tile-centered"
        data-practicer-sidebar-target="exercise" data-duration="<%= practiced["duration"] %>">
        <div class="tile-icon">
            <i class="icon icon-file centered"></i>
        </div>
        <div class="tile-content">
            <div class="tile-title">
              <%= link_to practiced["exercise"]["title"], exercise_path(practiced["exercise"]['id']), data: {turbo: false} %>
            </div>
            <small class="tile-subtitle text-gray">
                Dur√©e: <%= Time.at(practiced["duration"]).utc.strftime("%H:%M:%S") %>
            </small>
        </div>
        <div class="tile-action dropdown dropdown-right" tabindex="0">
            <button class="btn btn-link dropdown-toggle">
                <i class="icon icon-more-vert"></i>
            </button>
            <ul class="menu">
                <%= yield %>
            </ul>
        </div>
    </li>
