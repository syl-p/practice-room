<section class="home">
    <header>
        <div class="hero hero-sm bg-secondary">
            <div class="hero-body text-center">
                <h1 class="my-2">Practice room</h1>
                <p>La pratique de la musique 2.0</p>
            </div>
        </div>
    </header>
    <section class="container" data-controller="hello">
        <form class="card">
            <div class="card-body">
                <div class="form-group">
                    <div class="columns">
                        <div class="column">
                            <label for="search" class="form-label">Recherchez un exercise</label>
                            <input name="search" class="form-input" type="text" data-action="hello#fetch">
                        </div>
                    </div>
                </div>
            </div>
        </form>
        <!-- Exercise list -->
        <div class="pt-2" data-hello-target="exercises">
            <%= render partial: "exercises/list", locals: {exercises: @exercises} %>
        </div>
        <!-- Exercise list -->
    <section>
</section>