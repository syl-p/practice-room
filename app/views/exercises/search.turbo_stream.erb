<%= turbo_stream.replace "search_results_count" do %>
  <%= turbo_frame_tag "search_results_count" do %>
    Nous avons trouvé <%= @exercises.count %> résultats.
  <% end %>
<% end %>

<%= turbo_stream.replace "exercises_list" do %>
  <%= turbo_frame_tag "exercises_list", target: "exercises_list" do %>
    <%= render partial: "exercises/exercises_list", locals: {exercises: @exercises}  %>
  <% end %>
<% end %>
