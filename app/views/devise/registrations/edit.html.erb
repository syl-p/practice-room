<section class="dashboard-page container">
  <p></p>

  <article>
    <header class="dashboard-page__header">
      <h1>Vos informations</h1>
    </header>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }, data: {turbo: false}) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <section class="columns mt-2">
        <!-- infos -->
        <div class="column col-6">
          <div class="field form-group">
            <%= f.label :email, class: "form-label"  %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-input" %>
          </div>

          <div class="field form-group">
            <%= f.label :username, class: "form-label"  %>
            <%= f.text_field :username, class: "form-input" %>
          </div>

          <div class="field form-group">
            <%= f.label :avatar, class: "form-label"  %>

            <div class="tile">
              <div class="tile-icon mr-2">
                <!-- avatar preview -->
                <%= render partial: "users/avatar", locals: {user: resource, size: :large, ui: true} %>
              </div>
              <div class="tile-content ml-2">
                <!-- field -->
                <%= f.file_field :avatar, class: "form-input "%>
                <!-- field -->
              </div>
            </div>
          </div>

          <div class="field form-group">
            <%= f.label :bio, class: "form-label"  %>
            <%= f.text_area :bio, class: "form-input" %>
          </div>

          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
          <% end %>
        </div>

        <div class="divider-vert" data-content="options"></div>

        <!-- passwords -->
        <div class="column pl-3">
          <div class="field form-group">
            <%= f.label :password, class: "form-label"  %>
            <small>
              <i>(Laisser blanc si vous ne souhaitez pas le changer)</i>
            </small>
            <%= f.password_field :password, autocomplete: "new-password", class: "form-input"  %>
            <% if @minimum_password_length %>
              <br />
              <em><%= @minimum_password_length %> characters minimum</em>
            <% end %>
          </div>

          <div class="field form-group">
            <%= f.label :password_confirmation, class: "form-label"  %>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-input"  %>
          </div>
        </div>


        <div class="column col-12 mt-2">
        <div class="divider text-center" data-content="confirmation"></div>
          <div class="field form-group">
            <%= f.label "Mot de passe actuel", class: "form-label"  %>
            <small>
              <i>(Nous avons besoin de votre mot de passe pour confirmer les changements)</i>
            </small>
            <br />
            <%= f.password_field :current_password, autocomplete: "current-password", class: "form-input"  %>
          </div>

          <div class="actions mt-2 form-group">
            <%= f.submit "Mise Ã  jour", class: "form-input btn btn-primary" %>
          </div>
        </div>
      </section>
    <% end %>

  </article>

  <article>
    <header class="dashboard-page__header">
      <h3>Suppression du compte</h3>
    </header>
    <p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "form-input btn btn-error" %></p>
  </article>

  <%= link_to "Back", :back %>
</section>
