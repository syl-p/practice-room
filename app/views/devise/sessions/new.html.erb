<section class="container login">
  <header>
    <h2 class="text-center">Connecte toi</h2>
  </header>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field form-group">
      <%= f.label :email, class: "form-label" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-input" %>
    </div>

    <div class="field form-group">
      <%= f.label :password, class: "form-label" %>
      <%= f.password_field :password, autocomplete: "current-password", class: "form-input" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field form-group">
        <label class="form-checkbox">
          <%= f.check_box :remember_me %><i class="form-icon"></i>
          <%= f.label :remember_me %>
        </label>
      </div>
    <% end %>

    <div class="actions mb-2">
      <%= f.submit "Se connecter", class: "btn btn-primary" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>

</section>
