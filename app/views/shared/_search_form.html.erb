<%= form_tag search_index_path, method: :get,
  data: {controller: "search", turbo: true, turbo_frame: "search_results"},
  class:"relative w-full max-w-lg lg:max-w-xs" do %>
  <label for="search" class="sr-only">Search</label>
  <div class="relative">
    <div class="flex absolute inset-y-0 left-0 items-center pl-3 pointer-events-none">
      <svg class="w-5 h-5 text-gray-400" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
        <path fill-rule="evenodd" d="M9 3.5a5.5 5.5 0 100 11 5.5 5.5 0 000-11zM2 9a7 7 0 1112.452 4.391l3.328 3.329a.75.75 0 11-1.06 1.06l-3.329-3.328A7 7 0 012 9z" clip-rule="evenodd"></path>
      </svg>
    </div>
    <%= text_field_tag :search, params[:search], placeholder: "Recherche...",
      data: {action: "input->search#start"},
      class:"block py-1.5 pr-3 pl-10 w-full text-gray-900 bg-white rounded-xl border-0 ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-primary sm:text-sm sm:leading-6" %>
  </div>
  <div class="absolute bg-white z-10 w-full shadow">
    <%= turbo_frame_tag "search_results", data: {search_target: "results"} do %>
    <% end %>
  </div>
<% end %>
