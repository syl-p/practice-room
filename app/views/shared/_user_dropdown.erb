    <div class="dropdown">
        <div class="btn-group">
            <button class="btn btn-link <%= current_user.pending_invitations.count > 0 ? "badge" : "" %> mx-2  dropdown-toggle"
                    data-badge="<%= current_user.pending_invitations.count > 0 ? current_user.pending_invitations.count : 0 %>">
                <i class="icon icon-people"></i>
            </button>
            <div class="menu">
              <%= render partial: 'users/friendships/invitations_list' %>
            </div>
            <button class="btn btn-link ml-2" data-action="click->application#togglePracticerSidebar">
                <span class="pr-2"><%= current_user.username %></span>
                <%= render partial: "users/avatar", locals: {user: current_user, size: :small} %>
            </button>
            <a class="btn btn-link dropdown-toggle pl-0" tabindex="0">
                <i class="icon icon-caret"></i>
            </a>
            <!-- menu component -->
            <ul class="menu">
                <li><%= link_to "Votre espace", me_exercises_path %></li>
                <li><%= link_to "Modifiez vos informations", edit_user_registration_path %></li>
                <li role="separator" class="divider"></li>
                <li><%= link_to "Logout", destroy_user_session_path, method: :delete %></li>
            </ul>
        </div>
    </div>
