<aside class="hidden lg:flex lg:flex-shrink-0">
  <div class="flex w-20 flex-col">
    <div class="flex min-h-0 flex-1 flex-col overflow-y-auto bg-white">
      <div class="flex-1">
        <a href="<%= root_path %>" class="flex justify-center items-center h-16">
          <img class="w-auto h-8" src="https://tailwindui.com/img/logos/workflow-mark.svg?color=black" alt="Workflow">
        </a>

        <nav aria-label="Sidebar" class="flex flex-col space-y-0">
          <%
            nav_links = [
              {
                label: "Dashboard",
                path: dashboard_path,
                must_be_logged: true,
                logo: '
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" wstroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M7.5 14.25v2.25m3-4.5v4.5m3-6.75v6.75m3-9v9M6 20.25h12A2.25 2.25 0 0020.25 18V6A2.25 2.25 0 0018 3.75H6A2.25 2.25 0 003.75 6v12A2.25 2.25 0 006 20.25z" />
                </svg>
                '
              },
              {
                label: "Mes exercises",
                path: me_exercises_path,
                must_be_logged: true,
                logo: '
                  <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" wstroke-width="1.5">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                  </svg>'
              },
              {
                label: "Mes ressources",
                path: media_path,
                must_be_logged: true,
                logo: '
                  <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" wstroke-width="1.5">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-8l-4-4m0 0L8 8m4-4v12" />
                  </svg>'
              }
            ]
          %>
          <% nav_links.each do |link|
            next unless link[:must_be_logged].nil? || (link[:must_be_logged].present? & current_user.present?) %>
            <a href="<%= link[:path] %>" class="flex flex-col py-4 justify-between items-center text-xs font-medium leading-6 <%= current_page?(link[:path]) ? "bg-gray-100 text-black" : "text-black" %>">
              <%= raw link[:logo] %>
              <span class="sr-only"><%= link[:label]%></span>
            </a>
          <% end %>
        </nav>
      </div>

      <div class="flex flex-col items-center space-y-3">
        <%= link_to edit_registration_path(current_user), class: "p-3 text-black" do %>
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" wstroke-width="1.5" stroke="currentColor" class="w-6 h-6">
            <path stroke-linecap="round" stroke-linejoin="round" d="M10.343 3.94c.09-.542.56-.94 1.11-.94h1.093c.55 0 1.02.398 1.11.94l.149.894c.07.424.384.764.78.93.398.164.855.142 1.205-.108l.737-.527a1.125 1.125 0 011.45.12l.773.774c.39.389.44 1.002.12 1.45l-.527.737c-.25.35-.272.806-.107 1.204.165.397.505.71.93.78l.893.15c.543.09.94.56.94 1.109v1.094c0 .55-.397 1.02-.94 1.11l-.893.149c-.425.07-.765.383-.93.78-.165.398-.143.854.107 1.204l.527.738c.32.447.269 1.06-.12 1.45l-.774.773a1.125 1.125 0 01-1.449.12l-.738-.527c-.35-.25-.806-.272-1.203-.107-.397.165-.71.505-.781.929l-.149.894c-.09.542-.56.94-1.11.94h-1.094c-.55 0-1.019-.398-1.11-.94l-.148-.894c-.071-.424-.384-.764-.781-.93-.398-.164-.854-.142-1.204.108l-.738.527c-.447.32-1.06.269-1.45-.12l-.773-.774a1.125 1.125 0 01-.12-1.45l.527-.737c.25-.35.273-.806.108-1.204-.165-.397-.505-.71-.93-.78l-.894-.15c-.542-.09-.94-.56-.94-1.109v-1.094c0-.55.398-1.02.94-1.11l.894-.149c.424-.07.765-.383.93-.78.165-.398.143-.854-.107-1.204l-.527-.738a1.125 1.125 0 01.12-1.45l.773-.773a1.125 1.125 0 011.45-.12l.737.527c.35.25.807.272 1.204.107.397-.165.71-.505.78-.929l.15-.894z" />
