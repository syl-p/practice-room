<%
  content_for(:title, "Profil de #{@user.username}")
  content_for(:description, @user.bio)
%>

<section>
  <header class="w-full md:flex md:items-center md:justify-between mb-6">
    <div class="flex items-center space-x-5">
      <div class="flex-shrink-0">
        <div class="relative">
          <%= render partial: "users/avatar", locals: {user: @user, size: "16"} %>
        </div>
      </div>
      <div>
        <h1 class="text-2xl font-bold text-gray-900"><%= @user.username %></h1>
        <ul class="flex justify-between space-x-3 text-start">
          <li>
            <span class="font-bold"><%= @user.followers.count %></span>
            <span class="">Suiveurs</span>
          </li>
          <li>
            <span class="font-bold"><%= @user.following.count %></span>
            <span class="">Suivis</span>
          </li>
          <li>
            <span class="font-bold"><%= @user.exercises.count %></span>
            <span class="">Exercices</span>
          </li>
        </ul>
      </div>
    </div>
    <div class="mt-6 flex flex-col-reverse justify-stretch space-y-4 space-y-reverse sm:flex-row-reverse sm:justify-end sm:space-x-3 sm:space-y-0 sm:space-x-reverse md:mt-0 md:flex-row md:space-x-3">
      <%= render partial: "users/follows/btn", locals: {user: @user} if current_user.present? %>
    </div>
  </header>
  <div class="grid grid-cols-1 items-start gap-6 lg:grid-cols-3">
    <article class="grid-cols-1 space-y-6">
      <div class="rounded-lg shadow-lg bg-white border-t-4 border-primary p-5 flex-1">
        <p class="text-gray-500 mb-3"><%= @user.bio %></p>
        <p>Membre depuis <%= @user.created_at %></p>
      </div>
      <div class="rounded-lg shadow-lg bg-white p-5 flex-1">
        <!-- relation -->
        <% if @user.followers.present? %>
          <div>
            <h2 class="mb-3 text-gray-500">
              Découvrez qui sont les followers de cette personne
            </h2>
            <%= render partial: "users/follows/preview-list", locals: {user: @user} %>
          </div>
        <% end %>
        <!-- relation -->
      </div>
    </article>

    <article class="grid-cols-1 lg:col-span-2 ">
      <div class="rounded-lg shadow-lg bg-white overflow-hidden">
        <!-- Derniers exercices -->
        <% if @user.exercises.for_current_user(current_user) %>
          <%= render layout: 'layouts/tiles_list', locals: { items: @user.exercises.for_current_user(current_user)} do |item, section| %>
            <%- case section when :icon -%>
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 14.25v-2.625a3.375 3.375 0 00-3.375-3.375h-1.5A1.125 1.125 0 0113.5 7.125v-1.5a3.375 3.375 0 00-3.375-3.375H8.25m0 12.75h7.5m-7.5 3H12M10.5 2.25H5.625c-.621 0-1.125.504-1.125 1.125v17.25c0 .621.504 1.125 1.125 1.125h12.75c.621 0 1.125-.504 1.125-1.125V11.25a9 9 0 00-9-9z" />
              </svg>
            <%- when :title -%>
              <%= link_to item.title, exercise_path(item.id), class: "text-sm text-gray-700" %>
            <%- when :description -%>
              <%= item.description %>
            <%- when :actions -%>
              <% if can? :manage, item %>
                <%= link_to edit_exercise_path(item), class: "btn-secondary", data: {turbo_frame: :exercise_edit, action: "click->popup#open"}, class: "block btn btn-link" do %>
                  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M16.862 4.487l1.687-1.688a1.875 1.875 0 112.652 2.652L6.832 19.82a4.5 4.5 0 01-1.897 1.13l-2.685.8.8-2.685a4.5 4.5 0 011.13-1.897L16.863 4.487zm0 0L19.5 7.125" />
                  </svg>
                <% end %>
                <%- end -%>
            <% end %>
          <% end %>
        <% else %>
          <p>Aucun exercice publié par cet utilisateur pour le moment.</p>
        <% end %>
      </div>
    </article>
  </div>
</section>

