
<%= turbo_frame_tag "media-list" do %>
  <table class="min-w-full divide-y divide-gray-300">
    <thead>
      <tr>
        <th scope="col" class="py-3.5 pl-4 pr-3 text-left text-sm font-semibold text-gray-900 sm:pl-6 md:pl-0">Fichier</th>
        <th scope="col" class="py-3.5 px-3 text-left text-sm font-semibold text-gray-900">Name</th>
        <th scope="col" class="py-3.5 px-3 text-left text-sm font-semibold text-gray-900">Description</th>
        <th scope="col" class="py-3.5 px-3 text-left text-sm font-semibold text-gray-900">Action</th>
      </tr>
    </thead>

    <tbody class="divide-y divide-gray-200">
      <% media.each do |medium| %>
        <tr>
          <td class="whitespace-nowrap py-4 pl-4 pr-3 text-sm font-medium text-gray-900 sm:pl-6 md:pl-0">
            <%= medium.file.filename  %>
          </td>
          <td class="whitespace-nowrap py-4 px-3 text-sm text-gray-500"><%= medium.name %></td>
          <td class="whitespace-nowrap py-4 px-3 text-sm text-gray-500"><%= medium.description %></td>
          <td class="relative whitespace-nowrap py-4 pl-3 pr-4 text-right text-sm font-medium sm:pr-6 md:pr-0">
            <%= link_to 'Edit', edit_medium_path(medium), data: {turbo: false}, class: "btn btn-secondary" %>
            <%= link_to 'Destroy', medium, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-secondary" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
