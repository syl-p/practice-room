<li data-controller="comment">
  <%= turbo_frame_tag comment do %>
    <div class="flex relative gap-x-4 pt-8" >
      <div class="flex absolute top-0 left-0 -bottom-6 justify-center w-6">
        <div class="w-px bg-gray-500"></div>
      </div>

      <%= link_to user_url(comment.user), data: {turbo: false}, class: "flex-none relative " do %>
        <%= render partial: "users/avatar", locals: {user: current_user, size: :small} %>
      <% end %>

      <div class="flex-1 flex-auto">
        <div class="p-2 rounded-md ring-1 ring-inset ring-gray-200">
          <div class="flex gap-x-4 justify-between">
            <div class="py-0.5 leading-5 text-gray-500">
              <%= link_to comment.user.username, user_url(comment.user), class: "text-gray-900" %> dit
            </div>
            <time datetime="<%= comment.created_at %>" class="flex-none py-0.5 text-xs leading-5 text-gray-500"><%= l comment.created_at, format: :short %></time>
          </div>

          <p class="mt-3 leading-6 text-gray-500">
            <%= comment.body %>
          </p>
        </div>

        <% if user_signed_in? %>
          <div class="flex mt-3 text-xs">
            <p class="flex-1">
              <% if comment.parent_id.nil? %>
                <%= link_to "#", data: {action: "click->comment#display"}, class: "flex space-x-2" do %>
                  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M20.25 8.511c.884.284 1.5 1.128 1.5 2.097v4.286c0 1.136-.847 2.1-1.98 2.193-.34.027-.68.052-1.02.072v3.091l-3-3c-1.354 0-2.694-.055-4.02-.163a2.115 2.115 0 01-.825-.242m9.345-8.334a2.126 2.126 0 00-.476-.095 48.64 48.64 0 00-8.048 0c-1.131.094-1.976 1.057-1.976 2.192v4.286c0 .837.46 1.58 1.155 1.951m9.345-8.334V6.637c0-1.621-1.152-3.026-2.76-3.235A48.455 48.455 0 0011.25 3c-2.115 0-4.198.137-6.24.402-1.608.209-2.76 1.614-2.76 3.235v6.226c0 1.621 1.152 3.026 2.76 3.235.577.075 1.157.14 1.74.194V21l4.155-4.155" />
                  </svg>
                  <span>répondre</span>
                <% end %>
              <% end %>
            </p>
            <p class="">
              <% if can? :manage, comment %>
                <%= link_to "modifier", edit_comment_path(comment) %>
                <%= link_to "supprimer", comment_path(comment), method: :delete, data: {confirm: "Tu es sûr(e) ?"} %>
              <% end %>
            </p>
          </div>
        <% end %>
      </div>
    </div>

    <!-- REPLY -->
      <div class="flex relative gap-x-4">
        <div class="flex absolute top-0 left-0 -bottom-6 justify-center w-6">
          <div class="w-px border-l border-gray-500 border-dashed"></div>
        </div>

        <div class="relative flex-none">
        </div>

        <div class="flex-1 flex-auto py-6">
          <% if comment.comments.present? %>
            <%= link_to "Voir les réponses (#{comment.comments.size})", comment_path(comment), class: "block w-full text-center text-sm  py-6" %>
          <% end %>

          <div class="pl-6">
            <%= render partial: "comments/form", locals: {commentable: comment, comment: Comment.new, class: 'hidden'} if comment.parent_id.nil? && user_signed_in? %>
          </div>
        </div>
      </div>
    <!-- END REPLY -->
  <% end %>
</li>
